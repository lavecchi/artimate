<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>fr.loria.parole</groupId>
	<artifactId>artimate-model</artifactId>
	<version>0.0.1-SNAPSHOT</version>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<script.directory>${basedir}/src/scripts</script.directory>
		<generated.resource.directory>${project.build.directory}/generated-resources</generated.resource.directory>

		<blender.path>/Applications/blender.app/Contents/MacOS/blender</blender.path>
		<!-- TODO hardcoded for now, but can be overriden by -Ddata.directory -->
		<data.directory>/Users/steiner/projects/tonguebuilding</data.directory>
	</properties>

	<build>

		<resources>
			<resource>
				<directory>${generated.resource.directory}</directory>
			</resource>
		</resources>

		<plugins>

			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<version>1.2.1</version>
				<executions>
					<execution>
						<id>concatenate-pos</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>exec</goal>
						</goals>
						<configuration>
							<workingDirectory>${script.directory}</workingDirectory>
							<executable>python</executable>
							<arguments>
								<argument>CatPos.py</argument>
								<argument>--input-directory=${data.directory}</argument>
								<argument>--output-directory=${generated.resource.directory}</argument>
							</arguments>
						</configuration>
					</execution>
					<execution>
						<id>blender</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>exec</goal>
						</goals>
						<configuration>
							<!-- for some reason the following line has no effect in the blender 
								thread -->
							<workingDirectory>${script.directory}</workingDirectory>
							<executable>${blender.path}</executable>
							<!-- use commandlineArgs, not arguments -->
							<commandlineArgs>
								<!-- wrap in CDATA section to prevent line wrapping in Eclipse -->
								<![CDATA[--background --python ${script.directory}/generate_model.py -- --ema="${data.directory}"/pos/0012.pos --mesh="${data.directory}"/Tongue.ply --collada=${generated.resource.directory}/Tongue.dae]]>
							</commandlineArgs>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<artifactId>maven-remote-resources-plugin</artifactId>
				<version>1.2.1</version>
				<executions>
					<execution>
						<goals>
							<goal>bundle</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<resourcesDirectory>${generated.resource.directory}</resourcesDirectory>
					<includes>
						<include>**</include>
					</includes>
				</configuration>
			</plugin>

		</plugins>

		<pluginManagement>
			<plugins>

				<!--This plugin's configuration is used to store Eclipse m2e settings 
					only. It has no influence on the Maven build itself. -->
				<plugin>
					<groupId>org.eclipse.m2e</groupId>
					<artifactId>lifecycle-mapping</artifactId>
					<version>1.0.0</version>
					<configuration>
						<lifecycleMappingMetadata>
							<pluginExecutions>

								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>org.codehaus.mojo</groupId>
										<artifactId>exec-maven-plugin</artifactId>
										<versionRange>[1.2.1,)</versionRange>
										<goals>
											<goal>exec</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<execute />
									</action>
								</pluginExecution>

								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>org.apache.maven.plugins</groupId>
										<artifactId>maven-remote-resources-plugin</artifactId>
										<versionRange>[1.2.1,)</versionRange>
										<goals>
											<goal>bundle</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<execute />
									</action>
								</pluginExecution>

							</pluginExecutions>
						</lifecycleMappingMetadata>
					</configuration>
				</plugin>

			</plugins>
		</pluginManagement>
	</build>

</project>
